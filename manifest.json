{
  "manifest_version": 3,
  "name": "Multi-Screen Split View",
  "version": "1.0",
  "description": "Teilt das Browserfenster in 4 oder 3 Bereiche f√ºr gleichzeitige Videos und Websites",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtu.be/*",
    "https://livetiming.azurewebsites.net/*",
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Multi-Screen Split View"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["split-screen.html"],
      "matches": ["<all_urls>"]
    }
  ]
} 